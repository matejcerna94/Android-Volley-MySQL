<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:backgroundTint="@color/colorOrange">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/card_view_image"
            android:layout_width="130sp"
            android:layout_height="130sp">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/image_view_order_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>

    <TextView
        android:layout_marginTop="3dp"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="5dp"
        android:text="Order ID: "
        android:layout_toEndOf="@id/card_view_image"
        android:id="@+id/text_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_marginTop="3dp"
        android:textColor="@color/colorWhite"
        android:text="some"
        android:layout_toEndOf="@id/text_order_id"
        android:id="@+id/text_view_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_marginStart="5dp"
        android:text="Item name: "
        android:layout_toEndOf="@id/card_view_image"
        android:id="@+id/text_order_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_order_id"/>

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_toEndOf="@id/text_order_item_name"
        android:text="some"
        android:id="@+id/text_view_order_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_order_id" />


    <TextView
        android:textColor="@color/colorWhite"
        android:layout_marginStart="5dp"
        android:text="Amount: "
        android:layout_toEndOf="@id/card_view_image"
        android:id="@+id/text_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_order_item_name"/>

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_toEndOf="@id/text_amount"
        android:text="some"
        android:id="@+id/text_view_order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_order_item_name" />

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_marginStart="5dp"
        android:text="Single item price: "
        android:layout_toEndOf="@id/card_view_image"
        android:id="@+id/text_single_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_amount"/>

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_toEndOf="@id/text_single_item_price"
        android:text="some"
        android:id="@+id/text_view_order_single_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_amount" />

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_marginStart="5dp"
        android:text="Order price: "
        android:layout_toEndOf="@id/card_view_image"
        android:id="@+id/text_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_single_item_price"/>

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_toEndOf="@id/text_order_price"
        android:text="some"
        android:id="@+id/text_view_order_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_order_single_item_price" />

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_marginStart="5dp"
        android:text="Note: "
        android:layout_toEndOf="@id/card_view_image"
        android:id="@+id/text_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_order_price"/>

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/text_note"
        android:text="some"
        android:id="@+id/text_view_order_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_order_price" />

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_marginStart="5dp"
        android:text="Order date and time: "
        android:layout_toEndOf="@id/card_view_image"
        android:id="@+id/text_order_date_and_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_note"/>

    <TextView
        android:textColor="@color/colorWhite"
        android:layout_toEndOf="@id/text_order_date_and_time"
        android:text="some"
        android:id="@+id/text_view_order_date_and_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_order_note" />

    </RelativeLayout>


</android.support.v7.widget.CardView>